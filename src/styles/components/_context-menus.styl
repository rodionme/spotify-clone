.context-menu
  position absolute

  &__list
    width 194px
    margin-top 0
    margin-bottom 0
    padding-top 8px
    padding-bottom 8px
    padding-left 0
    border-radius 8px
    list-style none
    background-color $grey-darkest
    box-shadow 0 3px 10px 2px rgba(#000, .7)

  &__list-item
    position relative
    display flex
    align-items center
    padding-right 8px
    padding-left 8px

    &:hover
      background-color $grey-dark

    &--expandable
      & ^[0]__list
        position absolute
        top -8px
        display none

      &:hover
        & ^[0]__list
          display block

      &[data-position="left"]
        & ^[0]__list
          left 100%

      &[data-position="right"]
        & ^[0]__list
          right 100%

  &__list-divider
    position relative
    margin-bottom 10px

    &:after
      content ''
      position absolute
      bottom -(@margin-bottom / 2) - 1px
      left 0
      display block
      width 100%
      height 1px
      background-color $grey-dark

  &__link
    flex-grow 1
    padding-left 26px
    font-size 14px
    line-height 32px
    color $grey-light
    text-decoration none
    cursor pointer
    user-select none

  &__icon
    flex-shrink 0
    width 16px
    height 16px

    .icon
      fill $grey-light

    & + ^[0]__link
      padding-left 10px
