.filter
  position relative
  display flex
  justify-content space-between
  align-items center
  flex-grow 1
  height 36px
  padding-right 2px
  padding-left 12px

  &__icon
    position relative
    z-index 1
    width 16px
    height 16px

    &:hover
      & + ^[0]__input
        background-color $grey

    .icon
      fill $grey-light

  &__input
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    padding-right @padding-left + 16px + 10px
    padding-left @padding-left + 16px + 10px
    border none
    border-radius 2px
    line-height 32px
    color #fff
    background-color transparent
    transition background-color .2s ease

    placeholder($grey-light)

    &:focus
      background-color $grey

    &:hover
      placeholder(#fff)

      ~ .filter__icon
        .icon
          fill #fff

  &__button
    position relative
    z-index 1
    padding 10px
    border none
    background-color transparent
    cursor pointer
