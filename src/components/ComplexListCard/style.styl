@import "_shared";

.complex-list-card
  margin-top 10px
  margin-bottom 10px

  &__link
    text-decoration none

  &__card
    display flex
    height 50px

  &__thumb
    flex-shrink 0
    width 50px
    height @width
    overflow hidden
    margin-right 12px

    &--rounded
      border-radius 50%

  &__thumb-img
    max-width 100%

  &__content
    min-width 0
    display flex
    flex-direction column
    justify-content center

  &__title
    font-size 14px
    color #fff
    ellipsis()

  &__subtitle
    font-size 14px
    color $grey-light
    ellipsis()
