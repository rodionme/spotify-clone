@import "_shared";

.context-menu-item
  position relative
  display flex
  align-items center
  padding-right 8px
  padding-left 8px

  &:hover
    background-color $grey

  &--expandable
    & .context-menu__list
      position absolute
      top -8px
      display none

    &:hover
      & .context-menu__list
        display block

    &[data-position="left"]
      & .context-menu__list
        right 100%

    &[data-position="right"]
      & .context-menu__list
        left 100%

  &__divider
    position relative
    margin-bottom 10px

    &:after
      content ''
      position absolute
      bottom -(@margin-bottom / 2) - 1px
      left 0
      display block
      width 100%
      height 1px
      background-color $grey

  &__link
    flex-grow 1
    padding-left 26px
    font-size 14px
    line-height 32px
    color $grey-light
    text-decoration none
    cursor pointer
    user-select none

  &__icon
    flex-shrink 0
    width 16px
    height 16px

    .icon
      fill $grey-light

    & + ^[0]__link
      padding-left 10px
