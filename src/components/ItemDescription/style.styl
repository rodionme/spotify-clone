@import "_shared";

.item-description
  min-width 0
  display flex
  flex-direction column
  justify-content center
  align-items flex-start

  &--centered
    align-items center

  &__title
    margin-top 3px
    margin-bottom 3px
    border-bottom 1px solid transparent
    font-size 14px
    color #fff
    text-decoration none
    ellipsis()

    &:hover
      border-bottom-color #fff

    &--big
      font-size 16px

  &__text
    margin-top 3px
    margin-bottom 3px
    font-weight 300
    font-size 14px
    color $grey-light

  &__additional
    margin-top 3px
    margin-bottom 3px
    font-weight 300
    font-size 11px
    color $grey-light
    letter-spacing 2px
    text-transform uppercase

.item--horizontal
  .item-description
    margin-left 16px

    &__title
      margin-top 0
      border-bottom none

    &__text
      margin-top 0
      margin-bottom 0

    &__additional
      margin-bottom 0
