.header
  display flex
  min-width 670px

  &__thumb
    flex-shrink 0
    width 220px
    height @width
    margin-right 24px

    &--small
      width 120px
      height @width

  &__thumb-img
    max-width 100%

  &__content
    min-width 0
    display flex
    flex-direction column
    justify-content flex-end
    flex-grow 1

  &__overhead
    margin-top 4px
    margin-bottom 4px
    font-weight 300
    font-size 11px
    text-transform uppercase
    letter-spacing 2px
    color #fff
    ellipsis()

  &__title
    margin-top 0
    margin-bottom 0
    margin-left -3px
    font-size 48px
    line-height unit(52px / @font-size, '')
    color #fff
    ellipsis()

  &__description
    font-weight 300
    font-size 14px
    color $grey-light

    p
      margin-top 10px
      margin-bottom 10px

    a
      font-weight 300
      text-decoration none
      color #fff
      transition border-bottom .1s ease

      &:hover
        border-bottom 1px solid #fff

  &__actions
    display flex
    justify-content space-between
    align-items flex-end
    margin-top 10px

  &__buttons
    //

  &__button
    margin-right 12px

  &__additional
    display flex
    flex-direction column
    align-items flex-end

  &__additional-text
    font-weight 300
    font-size 12px
    line-height unit(15px / @font-size, '')
    letter-spacing 1px
    color $grey-light
